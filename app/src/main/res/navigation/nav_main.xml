<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.aristotele.film.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
       </fragment>
    <action
        android:id="@+id/actionToHome"
        app:destination="@id/homeFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.aristotele.film.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />



    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aristotele.film.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />




    <action
        android:id="@+id/actionToDetail"
        app:destination="@id/detailFragment" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.aristotele.film.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="movieID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.aristotele.film.ui.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.aristotele.film.ui.search.SearchFragment"
        android:label="fragment_serch"
        tools:layout="@layout/fragment_search" />
</navigation>